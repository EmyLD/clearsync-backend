generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  firstname   String?
  lastname    String?
  password    String
  Role        Role
  phone       String?       @unique
  createdAt   DateTime      @default(now())
  HostInfo    HostInfo[]
  PartnerInfo PartnerInfo[]
}

model PartnerInfo {
  id          Int          @id @default(autoincrement())
  userId      Int
  siret       String       @unique
  kbisFile    String?
  iban        String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  user        User         @relation(fields: [userId], references: [id])
  prestations Prestation[]
}

model HostInfo {
  id           Int            @id @default(autoincrement())
  userId       Int
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  airbnbLinks  AirbnbInfo[]
  CalendarLink CalendarLink[]
  user         User           @relation(fields: [userId], references: [id])
  prestations  Prestation[]
}

model AirbnbInfo {
  id         Int          @id @default(autoincrement())
  link       String       @unique
  hostInfoId Int
  adress     String
  postalCode String
  surface    Int
  nbrOfRoom  Int
  city       String
  hostInfo   HostInfo     @relation(fields: [hostInfoId], references: [id])
  Prestation Prestation[]
}

model CalendarLink {
  id         Int      @id @default(autoincrement())
  link       String   @unique
  hostInfoId Int
  hostInfo   HostInfo @relation(fields: [hostInfoId], references: [id])
}

model Prestation {
  id          Int      @id @default(autoincrement())
  hostId      Int
  partnerId   Int
  airbnbId    Int // Clé étrangère pour AirbnbInfo
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  host    HostInfo    @relation(fields: [hostId], references: [id])
  partner PartnerInfo @relation(fields: [partnerId], references: [id])
  airbnb  AirbnbInfo  @relation(fields: [airbnbId], references: [id]) // Relation avec AirbnbInfo

  @@index([airbnbId]) // Index sur airbnbId pour optimiser les requêtes
}

enum Role {
  PARTNER
  HOST
}
